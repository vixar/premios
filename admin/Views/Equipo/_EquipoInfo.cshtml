@model ProyectoCalidad.Domain.Entities.Equipos

@{
    List<ProyectoCalidad.WebUI.Models.EquipoInfoViewModel> equipoInfo = ViewBag.equipoEvaluadores;
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <h3 class="panel-title">@Model.Descripcion</h3>
        </div>
        @*<div class="panel-body">
                <p>
                </p>
            </div>*@

        <!-- List group -->
        <ul class="list-group">
            @if (equipoInfo != null)
            {
                foreach (var item in equipoInfo)
                {
                    if (item.EquipoEstado)
                    {
                        <li class="list-group-item">

                            <b> Estado</b>: Activo

                        </li>
                    }
                    else
                    {
                        <li class="list-group-item">

                            <b> Estado</b>: Inactivo

                        </li>
                    }
                    <li class="list-group-item">
                        @if (item.TipoPremio == null)
                        {
                            <b> Premio:</b> <i>-</i>
                        }
                        else
                        {
                        <b> Premio:</b> @item.TipoPremio
                        }
                        
                    </li>
                    <li class="list-group-item">
                        <b> Institución</b>: @item.InstitucionNombre
                    </li>
                    <li class="list-group-item">
                        <b> Premio</b>: @item.EquipoNombre
                    </li>
                }
            }




        </ul>
    </div>
</div>

