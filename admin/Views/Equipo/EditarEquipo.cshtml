@section Scripts{
    <script>

        function fn(id, i) {
            console.log("varibale input: ", i.id);
            var $this = this.checked;
            $('#' + i.id).change(function () {
                $.ajax({
                    type: "POST",
                    url: "~/Equipo/EstadoEquipo?id=" + id,
                    success: function (data) {
                        if (data === "True") {
                            $("#" + i.id).each(function () {
                                this.checked = true;
                                location.reload();
                            });
                        } else {
                            $("#" + i.id).each(function () {
                                this.checked = false;
                                location.reload();
                            });
                        }
                    }
                });
            });


        }
    </script>
}
