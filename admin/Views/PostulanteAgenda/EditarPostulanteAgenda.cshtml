@model  ProyectoCalidad.Domain.Entities.PostulantesAgenda

@{
                /**/

                ViewBag.Title = "Editar Postulante AgendaID";
}

<h2>&nbsp;<span class="glyphicon glyphicon-edit"></span>&nbsp;Editar Postulante AgendaID</h2>
<hr />

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><span class="glyphicon glyphicon-th-list"></span>&nbsp;Datos del Postulante Agenda <strong>@Model.PostulanteAgendaID</strong></h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("EditarPostulanteAgenda", "PostulanteAgenda", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal", @role = "form" }))
        {
            @Html.HiddenFor(x => x.PostulanteAgendaID)


            @Html.ValidationSummary(true)


            <div class="form-group">
                <label class="col-md-3 control-label">Agenda</label>
                <div class="col-md-9">
                    @Html.DropDownList("AgendaID", null, new { @class = "form-control" })

                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Postulante</label>
                <div class="col-md-9">
                    @Html.DropDownList("PostulanteID", null, new { @class = "form-control" })

                </div>
            </div>

            <div class="form-group">
                <label for="Actividad" class="col-md-3 control-label">Actividad</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.Actividad, new { @class = "form-control", @placeholder = "Actividad." })
                    @Html.ValidationMessageFor(x => x.Actividad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="FechaHoraContemplado" class="col-md-3 control-label">FechaHora Contemplado</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.FechaHoraContemplado, new { @class = "form-control", @placeholder = "FechaHora Contemplado." })
                    @Html.ValidationMessageFor(x => x.FechaHoraContemplado, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="PostulanteUsuario" class="col-md-3 control-label">Postulante Usuario</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.PostulanteUsuario, new { @class = "form-control", @placeholder = "Postulante Usuario." })
                    @Html.ValidationMessageFor(x => x.PostulanteUsuario, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="FechaHoraAprobado" class="col-md-3 control-label">FechaHora Aprobado</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.FechaHoraAprobado, new { @class = "form-control", @placeholder = "FechaHora Aprobado." })
                    @Html.ValidationMessageFor(x => x.FechaHoraAprobado, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="CoordinacionUsuario" class="col-md-3 control-label">Coordinacion Usuario</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.CoordinacionUsuario, new { @class = "form-control", @placeholder = "CoordinacionUsuario." })
                    @Html.ValidationMessageFor(x => x.CoordinacionUsuario, "", new { @class = "text-danger" })
                </div>
            </div>




            <div class="form-group">
                <label class="col-md-3 control-label">Estado</label>
                <div class="col-md-9">
                    @{
                        bool activo = true; // Model.Estado.Equals("Activo");
                    }
                    @Html.CheckBox("EstadoBool", activo, new { data_plugin = "switchery", data_olor = "#9261c6", data_secondary_color = "#ff7aa3" })

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-info">Registrar datos</button>
                    @Html.ActionLink("Cancelar registro", "Index", null, new { @class = "btn btn-warning" })
                </div>
            </div>
        }
    </div>
</div>

@section sideMenu
{

    <ul class="nav navbar-nav navbar-left">
        <li>
            <button class="button-menu-mobile open-left waves-effect waves-light">
                <i class="mdi mdi-menu"></i>
            </button>
        </li>
        <li class="hidden-xs">@Html.ActionLink("Regresar a Postulante Agenda", "Index", null, new { @class = "menu-item waves-effect waves-light" })</li>
        <li class="hidden-xs">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "menu-item waves-effect waves-light" })</li>
    </ul>
}