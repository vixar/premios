@model  ProyectoCalidad.Domain.Entities.TipoPremio

@{
    ViewBag.Title = "Editar Tipo de Premio";
}

@section style{

    <!-- Select2 -->
    <link href="~/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

    <!-- Jquery filer css -->
    <link href="~/plugins/jquery.filer/css/jquery.filer.css" rel="stylesheet" />
    <link href="~/plugins/jquery.filer/css/themes/jquery.filer-dragdropbox-theme.css" rel="stylesheet" />

}

<h2>&nbsp;<span class="glyphicon glyphicon-edit"></span>&nbsp;Editar Tipo de Premio</h2>
<hr />

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><span class="glyphicon glyphicon-th-list"></span>&nbsp;Datos del Tipo de Premio :  <strong>@Model.Descripcion</strong></h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("EditarTipoPremio", "TipoPremio", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal", @role = "form" }))
        {
            @Html.HiddenFor(x => x.TipoPremioID)


            @Html.ValidationSummary(true)



            <div class="form-group">
                <label for="Descripcion" class="col-md-3 control-label">Descripci&oacute;n</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control", @placeholder = "Descripción del Tipo Premio." })
                    @Html.ValidationMessageFor(x => x.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="Descripcion" class="col-md-3 control-label">Descripci&oacute;n</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.Siglas, new { @class = "form-control", @placeholder = "Siglas del Tipo Premio." })
                    @Html.ValidationMessageFor(x => x.Siglas, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Estado</label>
                <div class="col-md-9">
                    @Html.CheckBoxFor(m => m.Estado, new { data_plugin = "switchery", data_olor = "#9261c6", data_secondary_color = "#ff7aa3" })

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-info">Guardar</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-warning" })
                </div>
            </div>
        }
    </div>
</div>

@section sideMenu
{

    <ul class="nav navbar-nav navbar-left">
        <li>
            <button class="button-menu-mobile open-left waves-effect waves-light">
                <i class="mdi mdi-menu"></i>
            </button>
        </li>
        <li class="hidden-xs">@Html.ActionLink("Regresar a Tipo Premio", "Index", null, new { @class = "menu-item waves-effect waves-light" })</li>
        <li class="hidden-xs">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "menu-item waves-effect waves-light" })</li>
    </ul>
}