@{
    ViewBag.Title = "Instituciones y unidades que han postulado, por premiación";   
}

<script>
    $(document).ready(function () {
        $(".datepicker").datepicker({ format: 'dd/mm/yyyy', autoclose: true, todayBtn: 'linked' })
    });
</script>

<h2><span class="glyphicon glyphicon-th-list"></span>&nbsp;Cargar informaci&oacute;n evidencia</h2>
<hr />

@using (Html.BeginForm("ConsultaInstitucion", "Reportes", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", @role = "form" }))
{
    <div class="panel panel-default">
        <div class="panel-heading">

            <div class="panel-body">
                <div class="form-group">
                    <label for="Fecha1" class="col-sm-3 control-label">Seleccione el Año</label>
                    <div class="col-sm-3">
                        <div class="input-group">
                            <input type="text" id="FechaDesde" name="FechaDesde" class="datepicker form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        </div>
                    </div>
                    <label for="Premio" class="col-sm-3 control-label">Seleccione El Premio</label>
                    <div class="col-sm-3">
                        <div class="input-group">
                            @Html.DropDownList("PremioID", null, "Seleccione El Premio", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button type="submit" class="btn btn-default">Generar Reporte</button> &nbsp;
                 
                </div>

            </div>
        </div>
    </div>
}
<hr />
