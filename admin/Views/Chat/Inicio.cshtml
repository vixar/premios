<!DOCTYPE html>
<html>
<head>
  <title>pChat &mdash; Private Chatroom</title>
  <link rel="stylesheet" href="@Url.Content("~/Content/app.css")">
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">pChat</a>
        </div>
      </div>
    </nav>
    <!-- / Navigation Bar -->

    <div class="container">
      <div class="row">
        <div class="col-md-5 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-body">
   
    @using (Html.BeginForm("login", "Auth", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal", @role = "form" }))
    {

    <div class="form-group">
        <input type="text" name="username" id="username" placeholder="Enter Username" class="form-control" required minlength="3" maxlength="15" />
    </div>
    <button type="submit" class="btn btn-primary btn-block">Enter Chat</button>
    }

            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="@Url.Content("~/Content/app.js")"></script>
</body>
</html>