    <!-- init -->
    <script src="~/Scripts/pages/jquery.datatables.init.js"></script>

    <script>

        function aceptarOrganismo(id) {
            Swal.fire({
                title: 'Activar Organismo',
                html: "Va a activar esta institución para poder postular, está seguro?",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Activar!'
            }).then((result) => {
                if (result.value) {
                    var organismoId = id;

                    $("#coverScreen").show();

                    $.ajax({
                        type: "GET",
                        url: "/sgp_admin/RegistroORganismo/AceptarOrganismo?organismoId=" + organismoId,
                        success: function (data) {
                            if (data.success) {
                                Swal.fire({
                                    type: 'error',
                                    title: 'Email No Enviado',
                                    html: '@TempData["texto"]'
                                });
                                window.location.reload();
                            } else {
                                $("#coverScreen").hide();
                                Swal.fire({
                                    type: 'success',
                                    title: 'Email Enviado',
                                    html: 'El correo ha sido enviado correctamente'
                                });
                                location.reload();
                            }
                            
                        }


                    });

                    //setTimeout(function(){
                    //    $("#coverScreen").hide();
                    //}, 4000);


                }
            });
        }
        
        $(document).ready(function () {
            $("#coverScreen").hide();

            if ('@TempData["mensaje"]' === 'emailEnviado') {
                $("#coverScreen").hide();
                Swal.fire({
                    type: 'success',
                    title: 'Email Enviado',
                    html: '@TempData["texto"]'
                });

            }
            if ('@TempData["mensaje"]' === 'emailNoEnviado') {
                Swal.fire({
                    type: 'warning',
                    title: 'Email No Enviado',
                    html: '@TempData["texto"]'
                });

            }
            if ('@TempData["institucionNoExiste"]' === 'error') {
                Swal.fire({
                    type: 'error',
                    title: 'Email No Enviado',
                    html: '@TempData["texto"]'
                });

            }
            // Tooltips Initialization


            $('#datatable').dataTable({

            });

            $('#datatable-keytable').DataTable({ keys: true });
            $('#datatable-responsive').DataTable();
            $('#datatable-colvid').DataTable({
                "dom": 'C<"clear">lfrtip',
                "colVis": {
                    "buttonText": "Change columns"
                }
            });
            $('#datatable-scroller').DataTable({
                ajax: "~/plugins/datatables/json/scroller-demo.json",
                deferRender: true,
                scrollY: 380,
                scrollCollapse: true,
                scroller: true
            });
            var table = $('#datatable-fixed-header').DataTable({ fixedHeader: true });
            var table = $('#datatable-fixed-col').DataTable({
                scrollY: "300px",
                scrollX: true,
                scrollCollapse: true,
                paging: false,
                fixedColumns: {
                    leftColumns: 1,
                    rightColumns: 1
                }
            });
        });
        TableManageButtons.init();

    </script>
}

